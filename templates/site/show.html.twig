{% block body %}

	{% include 'include/_banner.html.twig' %}

	<main class="container content-row">
		<h1 class="text-center text-success mb-5">
			{{ site.title }}
		</h1>
		<div class="row g-4">
			<div class="col-sm-12 col-lg-6 col-xxl-6">
				<div class="card h-100 bg-light mb-4">
					<img class="card-img h-100" src={% if site.beforePicture is defined %} "{{ vich_uploader_asset(site, 'beforePictureFile') }}" {% else %} "{{ asset('build/images/placeholder-site.jpg') }}" {% endif %} alt="site-image">
				</div>
			</div>
			<div class="col-sm-12 col-lg-6 col-xxl-6">
				<div class="card h-100 bg-light mb-4">
					<img class="card-img h-100" src={% if site.afterPicture is defined %} "{{ vich_uploader_asset(site, 'afterPictureFile') }}" {% else %} "{{ asset('build/images/placeholder-site.jpg') }}" {% endif %} alt="site-image">
				</div>
			</div>
			<div class="text-center mt-5">
				<p class="bg-secondary text-dark rounded-3 p-4 mb-4">{{ site.description }}</p>
			</div>
			<div class="d-grid gap-2 d-md-flex justify-content-md-start mb-4">
				<a class="btn btn-primary text-light px-3 opacity-75 rounded" href="{{ path('site_index') }}" type="button">Retour</a>
			</div>
		</main>
	{% endblock %}
