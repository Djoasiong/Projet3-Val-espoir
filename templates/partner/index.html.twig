{% extends 'base.html.twig' %}

{% block body %}
	{% include 'partner/_banner.html.twig' %}
	<main class="container">
		<div class="text-center my-5 row-4 rounded-2">
			<h2>Les partenaires institutionnels</h2>
		</div>
		<div class="mb-5">
			{% for partenaire in partenaires %}
				<p>{{ 'partenaire.institutionalPartner' }}</p>
			{% endfor %}
		</div>
		<div class="text-center my-5 row-2">
			<h2>Les partenaires sociaux</h2>
		</div>
		<div class="mb-5">
			{% for partenaire in partenaires %}
				<p>{{ 'partenaire.socialPartner' }}</p>
			{% endfor %}
		</div>
		<div class="text-center my-5 row-3">
			<h2>Les partenaires financiers</h2>
		</div>
		<div class="partnerLogo">
			<div class="container">
				{% for partenaire in partenaires %}
					<img class="col my-3 mx-3" src="{{ partenaire.picture }}" alt="{{ partenaire.name }}">
				{% endfor %}
			</div>
		</div>
	</main>
{% endblock %}
