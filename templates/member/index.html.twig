{% extends 'base.html.twig' %}

{% block title %}Association
{% endblock %}

{% block banner %}
{% include 'member/_banner.html.twig' %}
{% endblock %}

{% block body %}
	<main class="container">
		{% for member in members %}
			<div class="card m-3">
				<div class="card-body">
					<h3 class="card-title text-center">{{ member.name }}</h3>
					<h5 class="card-title text-center">{{ member.role }}</h5>
					<p class="card-text text-center">{{ member.description }}</p>
				</div>
			</div>
	{% endfor %}
	<div class="card card-member mb-5 mt-5 bg-light opacity-75">
		<h3 class="card-header opacity-75 bg-dark text-light card-title text-center">A qui s'adresse Val Espoir</h3>
		<div class="text-center text-dark mt-5 mb-5">
			<p class="card-title mb-0">Des jeunes sans qualification ou sans expérience professionelle,</p>
			<p class="card-title mb-0">Des bénéficiaires des minima sociaux,</p>
			<p class="card-title mb-0">Des demandeurs d'emploi de longue durée,</p>
			<p class="card-title mb-0">Des personnes reconnues travailleurs handicapés,</p>
		</div>
	</div>
</main>
{% endblock %}
